    private void num1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_num1ActionPerformed
    
        double y;
        double curr = Integer.parseInt(num1.getText());
        
         if((combo1.getSelectedItem() == "US Dollars") && (combo2.getSelectedItem() == "Philippine Peso")){
             y = curr * 56.16;
             String number = String.valueOf(y);
             num2.setText(number);
         }
         else if((combo1.getSelectedItem() == "US Dollars") && (combo2.getSelectedItem() == "Chinese Yuan")){
             y = curr * 7.22;
             String number = String.valueOf(y);
             num2.setText(number);
         }
         else if((combo1.getSelectedItem() == "US Dollars") && (combo2.getSelectedItem() == "Japanese Yen")){
             y = curr * 151.34;
             String number = String.valueOf(y);
             num2.setText(number);
         }
         else if((combo1.getSelectedItem() == "US Dollars") && (combo2.getSelectedItem() == "UK Pound")){
             y = curr * 0.79;
             String number = String.valueOf(y);
             num2.setText(number);
         }
        if((combo1.getSelectedItem() == "Philippine Peso") && (combo2.getSelectedItem() == "US Dollars")){
             y = curr * 0.018;
             String number = String.valueOf(y);
             num2.setText(number);
         }
         else if((combo1.getSelectedItem() == "Philippine Peso") && (combo2.getSelectedItem() == "UK Pound")){
             y = curr * 0.014;
